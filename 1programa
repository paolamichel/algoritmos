#include <iostream>
#include <conio.h>
#include <string.h>

using namespace std;

struct tvector{
	int svec[30];
};
void cargar(tvector vec[],int n){
	int i,j;
		for(i=0;i<n;i++){
			for(j=0;j<n;j++){
				cout<<"ingrese un numero entero : ";
				cin>>vec[i].svec[j];
			}
		}
}
void mostrar(tvector vec[],int n){
	int i,j;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			cout<<vec[i].svec[j]<<" ";
		}
		cout<<"\n";
	}
}
bool esprimo(int n){
	int i;
	bool k=true;
	for(i=2;i<n-1;i++){
		if(n%i==0){
			k=false;
		}	
	}
return(k);
}
int sumadeprimos(tvector vec[],int n){
	int i,j,s=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(esprimo(vec[i].svec[j])==true){
				s=s+vec[i].svec[j];
			}
		}
	}
	return(s);
}

void main(){
	tvector vec[30];
	int n,suma;
	cout<<"ingrese el tamaÃ±o del vector:";
	cin>>n;
	cargar(vec,n);
	mostrar(vec,n);
	suma=sumadeprimos(vec,n);
	cout<<"la suma de primos es:"<<suma;
	getch();
}

	
