#include<iostream>
#include<conio.h>
#include<string.h>
#define MAXFIL 10
#define MAXCOL 10

using namespace std;

struct tvector{
	int mat[MAXFIL][MAXCOL];
};

void cargar(tvector vec[],int n){
	int i ,j,c=1,k,c2=1,b=0;
	for(k=0;k<n;k++){
	  for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i%2==0){		 
			vec[k].mat[i][j]=c;
			c++;
			b=1;
		   }
		   else{
		   vec[k].mat[i][j]=c2;
		   c2++;
		   b=0;
		   }
		}
	  }
   }
}
void mostrar(tvector vec[],int n){
	int i ,j,k;
	for(k=0;k<n;k++){
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
		cout<<vec[k].mat[i][j]<<" ";
		}
		cout<<endl;
	}
	cout<<endl;
 }
}
void main(){
	tvector vec[20];
	int n;
	cout<<"ingrese el tamaÃ±o:";
	cin>>n;
	cargar(vec,n);
	mostrar(vec,n);

	getch();
}
