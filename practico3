#include <iostream>
#include <conio.h>
#include <stdio.h>
using namespace std;
#define fil 20
#define col 20
struct tmatriz{
	int smat[fil][col];
};
void cargar(tmatriz mat[fil][col],int n){
	int i,j,k,l,p=1;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			for(k=0;k<n;k++){
				for(l=0;l<n;l++){
					cout<<"ingresar el numero:";
					cin>>mat[i][j].smat[k][l];
				}
			}
		}
	}
}
void mostrar(tmatriz mat[fil][col],int n){
	int i,j,k,l;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			for(k=0;k<n;k++){
				for(l=0;l<n;l++){
					cout<<mat[i][j].smat[k][l]<<" ";
				}
				cout<<endl;
			}
			cout<<endl;
		}
		cout<<endl;
	}
}
bool verifprimo(int n){
	int i;
	bool k=true;
	for(i=2;i<n;i++){
		if(n%i==0){
			k=false;
		}
	}
	return(k);
}
void ordenar(int vec[],int n){
	int i,j,aux;
	for(i=0;i<n;i++){
		for(j=i+1;j<n;j++){
			if(vec[i]>vec[j]){
				aux=vec[i];
				vec[i]=vec[j];
				vec[j]=aux;
			}
		}
	}
}
void ordenarDPTSTI(tmatriz mat[fil][col],int n){
	int i,j,k,l,aux[50],c=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i==j){
				for(k=0;k<n;k++){
					for(l=0;l<n;l++){
						if(verifprimo(mat[i][j].smat[k][l])==true){
							aux[c]=mat[i][j].smat[k][l];
							c++;
						}
					}
				}
			}
		}
	}
	ordenar(aux,c);
	c=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i==j){
				for(k=0;k<n;k++){
					for(l=0;l<n;l++){
						if(verifprimo(mat[i][j].smat[k][l])==true){
							mat[i][j].smat[k][l]=aux[c];
							c++;
						}
					}
				}
			}
		}
	}
	c=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i<j){
				for(k=0;k<n;k++){
					for(l=0;l<n;l++){
						if(verifprimo(mat[i][j].smat[k][l])==true){
							aux[c]=mat[i][j].smat[k][l];
							c++;
						}
					}
				}
			}
		}
	}
	ordenar(aux,c);
	c=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i<j){
				for(k=0;k<n;k++){
					for(l=0;l<n;l++){
						if(verifprimo(mat[i][j].smat[k][l])==true){
							mat[i][j].smat[k][l]=aux[c];
							c++;
						}
					}
				}
			}
		}
	}
	c=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i>j){
				for(k=0;k<n;k++){
					for(l=0;l<n;l++){
						if(verifprimo(mat[i][j].smat[k][l])==true){
							aux[c]=mat[i][j].smat[k][l];
							c++;
						}
					}
				}
			}
		}
	}
	ordenar(aux,c);
	c=0;
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i>j){
				for(k=0;k<n;k++){
					for(l=0;l<n;l++){
						if(verifprimo(mat[i][j].smat[k][l])==true){
							mat[i][j].smat[k][l]=aux[c];
							c++;
						}
					}
				}
			}
		}
	}
}
void main(){
	tmatriz mat[fil][col];
	int n;
	cout<<"ingresar el tamaÃ±o de la matriz:";
	cin>>n;
	cargar(mat,n);
	mostrar(mat,n);
	ordenarDPTSTI(mat,n);
	mostrar(mat,n);
	getch();
}
